<!DOCTYPE html>
<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>

<div class="login_wrapper">
    <div class="container-fluid">
        <div class="row p-0">

            <div class="col-12 d-sm-block d-lg-none p-0">
                <div class="back_block">
                    <a href="index.html"><img src="./images/back.svg" alt="" /></a>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-6 p-0 d-none d-md-block">
                <div class="log-bg-right">
                    <img src="../images/BackgroundLogin.jpg" class="img-fluid" />
                </div>
            </div>
            <div class="col-12 col-md-6 col-lg-6 p-0 mobile_bg">
                <div class="login_form">
                    <div class="logo_div pb-4 ">
                        <a href="index.html"><img src="../images/login_logo.png" alt="" class="" /></a>
                    </div>
                    <form>
                        <div class="form-group">
                            <span class="user_icon"></span>
                            <input type="text" placeholder="Username" id="uname" class="form-control" />
                        </div>
                        <div class="form-group pt-4">
                            <span class="password_icon"></span>
                            <input type="password" placeholder="Password" id="pwd" class="form-control" />
                        </div>
                        <div class="form-group pt-4">
                            <div class="row">
                                <div class="col-6">
                                    <input type="checkbox" class="form-check-inline" />
                                    <label class="rme_class">Remember me</label>
                                </div>

                                <div class="col-6">
                                    <a href="~/login/PasswordRecovery" class="forgot_pwd">
                                        Forgot
                                        password?
                                    </a>
                                </div>
                            </div>
                        </div>
                        <!-- <div class="form-group p-2" style="text-align: left;">

    </div> -->
                        <input type="button" value="Submit" class="login_btn" onclick="login()" />
                        @*<a href="~/Dashboard/Index" class="login_btn">Login</a>*@
                        @*<button type="submit" class="login_btn" id="btnSubmit">Login</button>*@
                        @*<input type="submit" value="Login" class="login_btn" onclick="login" />*@
                    </form>
                    <div class="follow_block pt-2 pb-2">
                        <h4>Follow Us!</h4>
                        <ul class="social_icons">
                            <li>
                                <a href="https://www.virevo.it/" target="_blank">
                                    <img src="../images/virevo.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href="https://www.linkedin.com/company/virevo/" target="_blank">
                                    <img src="../images/linkedin.png" alt="">
                                </a>
                            </li>
                            <li>
                                <a href="https://www.instagram.com/virevo_digital_kaizen/" target="_blank">
                                    <img src="../images/instagram.png" alt="">
                                </a>
                            </li>

                            <li>
                                <a href="#" target="_blank">
                                    <img src="../images/youtube.png" alt="" />
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>



<script type="text/javascript">
    function login() {
        var Uname = $("#uname").val();
        var Pwd = $("#pwd").val();
        if(Uname=="")
        {
            alert("Please enter Username")
            return false;
        }
        if (Pwd=="") {
            alert("Please enter Password")
            return false;

       }

        //Set the URL.
        $.ajax({
            url: "/Login/Loginview",
            type: 'POST',
            contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
            data: { //Passing data
                UserName: $("#uname").val(), //Reading text box values using Jquery
                Password: $("#pwd").val(),
            }
        }).done(function (response) {
            if (response.message != null) {
               alert(response.message)
            }
            else {
                window.location.href = "/Dashboard/Index";
                
            }
        });
    }
</script>
